@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FrontEnd</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Policy="Role:projectcoordination">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="trips">
                        <span class="bi bi-geo-alt-fill" aria-hidden="true"></span> Trip Calculator
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="Role:socialvisionary">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-places">
                        <span class="bi bi-pin-map-fill" aria-hidden="true"></span> My Places
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="Role:admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/places">
                        <span class="bi bi-gear-fill" aria-hidden="true"></span> Manage Places
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="Role:projectcoordination">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user-settings">
                        <span class="bi bi-currency-euro" aria-hidden="true"></span> User Cost Settings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="default-settings">
                        <span class="bi bi-gear-fill" aria-hidden="true"></span> Default Cost Settings
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}